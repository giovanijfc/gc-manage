{
  "name": "GC-Manage",
  "version": "0.1.0",
  "author": "Giovani Chiodi",
  "description": "Manage your small company but big business",
  "private": true,
  "main": "./public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.gc.manage",
    "files": [
      "/build/**/*",
      "/node_modules/**/*"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^0.1.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-is-dev": "^1.2.0",
    "firebase": "^7.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.8.2",
    "react-icons": "^3.11.0",
    "react-loadingg": "^1.7.2",
    "react-modal": "^3.11.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "react-transition-group": "^4.4.1",
    "styled-components": "^5.2.0",
    "yup": "^0.29.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "package:win": "yarn build && electron-builder build --win -c.extraMetadata.main=build/electron.js --publish never",
    "package:mac": "yarn build && electron-builder build --mac  --win -c.extraMetadata.main=build/electron.js --publish never"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "electron-packager": "^15.1.0",
    "wait-on": "^5.2.0"
  }
}
